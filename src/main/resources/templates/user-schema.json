{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "maximum": 30
    },
    "age": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "maxLength": 3
    },
    "email": {
      "type": "string",
      "maxLength": 30
    }
  },
  "required": ["name", "age", "email"]
}